<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ebongkobita"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PoemListActivity"
            android:label="@string/title_activity_poem" >
        </activity>
        <activity
            android:name=".PoemDetailsActivity"
            android:label="@string/title_activity_poem_details" >
        </activity>
        <activity
            android:name=".WritingFormActivity"
            android:label="@string/title_activity_writing_form" >
        </activity>
        <activity
            android:name=".LinkActivity"
            android:label="@string/title_activity_link" >
        </activity>
        <activity
            android:name=".SpeechActivity"
            android:label="@string/title_activity_speech" >
        </activity>
        <activity
            android:name=".SpeechDetailActivity"
            android:label="@string/title_activity_speech_detail" >
        </activity>
        <activity
            android:name=".ImageActivity"
            android:label="@string/title_activity_image" >
        </activity>
    </application>

</manifest>
