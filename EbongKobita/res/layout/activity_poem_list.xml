<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ebongkobita.PoemListActivity"
    android:background="#ee111905" >
    
    <RelativeLayout  android:layout_width="match_parent"
    android:layout_height="30dp"
    android:background="#000000"
    android:orientation="vertical" 
    android:layout_marginBottom="3dp">
        <TextView
        android:id="@+id/contentTypeName"
        android:layout_width="125dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Poem Name"
        android:textColor="#f91bf431" 
        android:layout_marginRight="2dp"
        android:gravity="center"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/contentTypeWriter"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/textView1"
        android:layout_gravity="center_horizontal"
        android:layout_toRightOf="@+id/contentTypeName"
        android:text="লেখক"
        android:textColor="#f91bf431"
        android:layout_marginRight="2dp"
        android:gravity="center"
        android:layout_marginLeft="40dp" 
        android:textSize="22sp"/>
        
    </RelativeLayout>
    
    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="4dp"
         >
    </ListView>

    
</LinearLayout>
